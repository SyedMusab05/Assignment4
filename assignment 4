# Favorite fruits list
favorite_fruits = ["Apple", "Banana", "Orange", "Grapes"]
print("Favorite Fruits:", favorite_fruits)

# Add a new fruit
favorite_fruits.append("Mango")
print("After adding a new fruit:", favorite_fruits)

# Remove the third fruit
removed_fruit = favorite_fruits.pop(2)
print(f"Removed {removed_fruit}, Updated Fruits:", favorite_fruits)

# Create two lists of numbers and concatenate them
list1 = [1, 2, 3]
list2 = [4, 5, 6]
concatenated_list = list1 + list2
print("Concatenated List:", concatenated_list)

# Multiply each element by 2
multiplied_list = [x * 2 for x in concatenated_list]
print("Multiplied by 2:", multiplied_list)

# Create a tuple with the days of the week
days_of_week = ("Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday")

# Access and print the third day of the week
third_day = days_of_week[2]
print("Third day of the week:", third_day)

# Create a list of tuples (name, age)
people_data = [("Alice", 25), ("Bob", 30), ("Charlie", 22)]
print("List of Tuples (name, age):", people_data)
